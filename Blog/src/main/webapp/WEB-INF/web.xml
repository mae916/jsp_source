<?xml version="1.0" encoding="utf-8"?>
<web-app>
	<servlet>
		<servlet-name>Blog Write</servlet-name>
		<servlet-class>com.controller.WriteController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Blog Write</servlet-name>
		<url-pattern>/write</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>Common</filter-name>
		<filter-class>com.filter.CommonFilter</filter-class>	
	</filter>
	<filter-mapping>
		<filter-name>Common</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>